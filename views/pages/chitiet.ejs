<% layout('../layouts') -%>

<div class="thumbnail_slider_area"></div>

<section id="contentbody">
  <div class="row">

    <div class="col-lg-8 col-md-7 col-sm-8 col-xs-12">
        <br>
        <div class="row">
            <div class="middle_bar">
                <div class="single_post_area">
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-home"></i>Home<i class="fa fa-angle-right"></i></a></li>
                        <li><a href="#"><%= baiviet.tentheloai%><i class="fa fa-angle-right"></i></a></li>
                        <li class="active"><%= baiviet.tenloaitin%></li>
                    </ol>
                    <h3 class="post_title wow "><%= baiviet.tieude%></h3>
                    <a href="#" class="author_name"><i class="fa fa-user"></i><%= baiviet.tacgia%></a> <a href="#" class="post_date"><i class="fa fa-clock-o"></i><%= myFunc(baiviet.ngaydang)%></a>
                    <div class="single_post_content">
                        <img class="img-center" src="/Uploads/Images/<%=baiviet.urlanh%>" alt="" width="640" height="400">
                        <br>
                        <blockquote> <%= baiviet.tomtat%></blockquote>
                        <div><%- baiviet.noidung%></div>
                    </div>
                    <div class="post_footer">
                    </div>
                    <div class="social_area wow fadeInLeft">
                        <div class="fb-comments" data-href="https://developers.facebook.com/docs/plugins/comments#bkfa-news#chitiettintuc<%=baiviet.idbaiviet%>" data-width="760" data-numposts="5"></div>
                    </div>
                    <div class="related_post">
                        <h2 class="wow fadeInLeftBig">Related Posts you may like <i class="fa fa-thumbs-o-up"></i></h2>
                        <ul class="recentpost_nav relatedpost_nav wow fadeInDown animated">
                            <% lienquan.forEach(function (i){%>
                            <li><a href="#"><img alt="" src="/Uploads/Images/<%=i.urlanh%>" style="width: 150px; height: 80px;"></a> <a href="#" class="recent_title"><%= i.tieude %></a></li>
                            <%})%>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%include ../partials/cotphai%>

  </div>
</section>